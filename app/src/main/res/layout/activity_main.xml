<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutEditar"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#FAF7F6"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Actualizar Datos"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/vnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Nombre"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/TNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vapellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Apellidos"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/TApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Edad"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/TEdad"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:hint="Edad"
            android:inputType="number"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vdireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Direccion"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/TDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Direccion"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vpuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Puesto"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/TPuesto"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:hint="Puesto"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:insetLeft="60dp"
            android:insetTop="15dp"
            android:insetRight="60dp"
            android:insetBottom="10dp"
            android:paddingTop="10dp"
            android:background="#D85529"
            android:text="Cancelar"
            android:textAllCaps="false" />

    </LinearLayout>

<ListView
    android:id="@+id/listViewPersonas"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</LinearLayout>